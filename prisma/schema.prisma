
//PIMBOLA
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
 
model User{
  id Int @id @default(autoincrement())
  name String @unique
  password String
  profile Profile ?
  product Products []
}

model Profile{
  id Int @id @default(autoincrement())
  avatar Bytes
  street String
  number Int
  postalcode String
  user User ? @relation(fields: [profileId], references: [id])
  profileId Int ? @unique
}

//PRECISA RODAR O MIGRATE - APAGAR COMENTÁRIO APÓS RODAR O MIGRATE.
model Products{
  id Int @id @default(autoincrement())
  image Bytes
  name String
  price Decimal
  ammount Int
  user User ? @relation(fields: [userId], references: [id])
  userId Int ?
}
